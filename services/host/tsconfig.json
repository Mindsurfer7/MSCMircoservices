{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist/",
    "noImplicitAny": true,
    "module": "ESNext",
    "target": "es5",
    "jsx": "react-jsx",
    "allowJs": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "composite": true,
    "baseUrl": "./",
    "paths": {
      "@packages/shared/*": ["../../packages/shared/src/*"]
    }
  },
  "include": ["./src/**/*.ts"]
}
